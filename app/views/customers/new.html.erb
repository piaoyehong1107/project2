<h1> New File </h1>
<%= form_for @customer do |f| %>
<hr>
    <%= f.label "Name: " %>
    <%= f.text_field :name %></br>
    <%= f.label "Age: " %>
    <%= f.text_field :age %></br>
    <%= f.label "Phone Number: " %>
    <%= f.text_field :phone_number %></br>
    <%= f.label "Address: " %>
    <%= f.text_field :address %></br>
    <%= f.label "Email: " %>
    <%= f.text_field :email %></br>
    <%= f.label "Salary " %>
    <%= f.text_field :salary %></br>
    Please choose your card below:
   <p> 
    <%= f.collection_check_boxes :card_ids, Card.all, :id, :name %></br>
    </p>
 <%= f.submit %>
<% end %>
