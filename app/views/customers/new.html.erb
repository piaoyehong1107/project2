<%= form_for @customer do |f| %>
<hr>
    <%= f.label "Name: " %>
    <%= f.text_field :name %></br>
    <%= f.label "Age: " %>
    <%= f.text_field :age %></br>
    <%= f.label "Phone Number: " %>
    <%= f.text_field :phone_number %></br>
    <%= f.label "Address: " %>
    <%= f.text_field :address %></br>
    <%= f.label "Email: " %>
    <%= f.text_field :email %></br>
    <%= f.label "Salary " %>
    <%= f.text_field :salary %></br>
    Your Card:
    <%= f.collection_check_boxes :card_ids, Card.all, :id, :name %></br>
    <%= f.fields_for :cards, @customer.cards.build do |card_fields|%>
     Card Name: <%= card_fields.text_field :name %>
     Select Bank: <%= card_fields.collection_select :bank_id, Bank.all, :id, :name %></br>
    <% end %>
 <%= f.submit %>
<% end %>
