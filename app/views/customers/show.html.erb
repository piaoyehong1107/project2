<h1> Profile </h1>
<hr>
Name: <%= @customer.name %></br>
Age: <%= @customer.age %></br>
Phone Number: <%= @customer.phone_number %></br>
Address: <%= @customer.address %></br>
Email: <%= @customer.email %></br>
Salary: <%= @customer.salary %></br></br>
Account: </br>
    <% @customer.cards.each do |card| %>
          <li> <%=card.name %> </br>
          <% card.transactions.each do |trans| %> 
             - $<%= trans.amount %> made on <%= trans.created_at.strftime("%m/%d/%Y")%></li>
            <% end %>
    <% end %></br>

<%= link_to "Edit", edit_customer_path(@customer) %></br>
<%= link_to 'Delete', customer_path(@customer), method: :delete, data: { confirm: 'Are you sure?' } %>
